<UsersSeeWidget>
    
    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wróć"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = root.parent.last_screen()
    
    GridLayout:
        size: root.width, root.height
        cols: 1

        
        
        GridLayout:
            cols: 3
            size_hint: (0.1, 0.06)
            Label:
                text: "Email"
            TextInput:
                id: email_add_user
                hint_text: "Podaj email użytkownika"
            Button:

                text: "Dodaj"
            

        UserListButton:

<BattonLabel>:
    nazwa: nazwa
    label_text: label_text
    cols: 3
    padding: 20
    id: nazwa
    text: ''
    # Draw a background to indicate selection
    Label:
        id: label_text
        text: nazwa.text
    Button:
        text: "Zobacz Profil"

    Button:
        text: "Historię pomiarową "
    

        


    
<UserListButton>
    viewclass: 'BattonLabel'
    color: 0,0,0,1
    RecycleBoxLayout:
        orientation: 'vertical'
        default_size: root.width, None
        size_hint_y: None
        height: self.minimum_height
        width: self.minimum_width
        multiselect: True
        touch_multiselect: True

        
