<SingInWidget>
    name: 'singinwidget'
    canvas.before:
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100
        Log:
            text: "Wróć"
            on_press: 
                root.manager.current = 'userprowidget'
                
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 200

        Label:
            text: "Twoi użytkownicy"
            width: 30
            color: 0,0,0,1

        BoxLayout:
            cols:4
            
            Label:
                text: "Imię"
                width: 30
                color: 0,0,0,1
            
            Label:
                text: "Nazwisko"
                width: 30
                color: 0,0,0,1

            Button:
                text: "Zobacz historie pomiarową"

            Button:
                text: "Zmień dane personalne"



<Button>
    size_hint: (0.5, 0.5)
    width: 200
    height: 50
    pos_hint: {'center_x': 0.5}