<MyGrid>
    name: 'mygrid'
    com: com
    spinner_port:spinner_port
    canvas.before:
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
        
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100

        Spinner:
            size_hint: (0.5, 0.5)
            width: 200
            height: 50
            pos_hint: {'center_x': 0.5}

            id: spinner_port
            text: 'Wybirze port'
            values: 'com1', 'com2', 'com3', 'com4'
            on_text: root.spinner_clicked(spinner_port.text)



        TextInput:
            text: "Twoje wyniki pomiarowe"
            multiline: False
            id: com
            color: 0,0,1,1
            

        MyButton:
            text: "Start pomiaru"
            id: butt
            on_press: root.start_thread()

        MyButton:
            text: "Stop pomiaru"
            on_press: root.stop()

        MyButton:
            text: "Zapisz"
            on_press: root.save_file_()
            
            

<MyButton@Button>
    size_hint: (0.5, 0.5)
    width: 200
    height: 50
    pos_hint: {'center_x': 0.5}



<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            MyButton:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)