<AChooseLotsMusclesWidget>
    name: 'a_chooselotsmuscleswidget'
    many_: many_
    recyView: recyView
    on_pre_enter: root.on_load()
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    

    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wróć"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = root.parent.last_screen()

        

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        
        Spinner:
            size_hint: (0.5, 0.1)
            width: 200
            height: 50
            pos_hint: {'center_x': 0.5}

            id: many_
            text: 'Wybierz ilość badanych mięśni'
            values: '' 
            on_text: root.choose_clicked( many_.text)

        GridLayout:
            cols: 1
            size: root.width, root.height
            AUserListButton:
                id: recyView


        

        
        HButton:
            text: "Dalej"
            size_hint: (0.5, 0.1)
            
            on_press:
                if(root.on_click(many_.text)):\
                root.parent.add_screen('a_chooselotsmuscleswidget');\
                root.manager.current = 'a_managmentsensorsidget';\
                root.manager.transition.direction = 'left'




<BattonLabelSpinner>:
    nazwa: "battonLabelSpinner"
    label_text: label_text
    cols: 3
    padding: 20
    id: nazwa
    text: ''
    # Draw a background to indicate selection
    TextInput:
        color: 0,0,0,1
        id: label_text

    Button:
        text: "Znajdz Użytkownika"
    
    Button:
        text: "Wybierz mieśnie"
        
    

    


<AUserListButton>
    name: "recyView"
    viewclass: 'BattonLabelSpinner'
    color: 0,0,0,1
    #data: root.parent.get_data()
    RecycleBoxLayout:
        orientation: 'vertical'
        default_size: root.width, None
        size_hint_y: None
        height: self.minimum_height
        width: self.minimum_width
        multiselect: True
        touch_multiselect: True