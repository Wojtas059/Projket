<AReferenceInstWidget>
    name: 'a_referenceinstwidget'
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    

    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wróć"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = root.parent.last_screen()

        

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        

        
        TextInput:
            text: "Tu pojawi się instrukcja zapoznająca\n z cwiczeniem referencyjnym"
            multiline: False
            id: com
            color: 0,0,1,1

        
        UButton:
            text: "Rozpocznij ćwiczenie"
            on_press:
                root.parent.add_screen('a_referenceinstwidget')
                root.manager.current = 'a_observationrefwidget'
                root.manager.transition.direction = 'left'