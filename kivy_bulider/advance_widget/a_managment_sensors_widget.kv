<AUserListManagment>
    name: "recyViewmanagment"
    viewclass: 'BattonManagmentLabel'
    color: 0,0,0,1
    #data: root.parent.get_data()
    RecycleBoxLayout:
        orientation: 'vertical'
        default_size: root.width, None
        size_hint_y: None
        height: self.minimum_height
        width: self.minimum_width
        multiselect: True
        touch_multiselect: True