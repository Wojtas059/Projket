<AStartGuestWidget>
    name: 'a_startguestwidget'
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    

    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wróć"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = root.parent.last_screen()

        

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        

        
        Label:
            text: "Jesteś w trybie gość\nJeśli chcesz aby Twoje wyniki były zapisane\na także abyś mógł korzystać z większej ilości usług,\nzaloguj się lub zarejestruj się"
            color: 0,0,0,1

        UButton:
            text: "Zaloguj się lub Zarejestruj się"
            on_press:
                root.parent.add_screen('a_startguestwidget')
                root.manager.current = 'a_singinwidget'
                root.manager.transition.direction = 'left'
        
        UButton:
            text: "Dalej"
            on_press:
                root.parent.add_screen('a_startguestwidget')
                root.manager.current = 'a_choosemethodwidget'
                root.manager.transition.direction = 'left'




