<SingIn>
    name: 'singin'
    canvas.before:
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 200

        Label:
            text: "Name"
            width: 30
            color: 0,0,0,1
        TextInput:
            id: name
            mulitiline: False
            pos_hint: {'center_x': 0.5}
            size_hint_x: 0.5
            width: 100
            line_height: 1

        Label:
            text: "Hasło"
            width: 30
            color: 0,0,0,1
        TextInput:
            id: pass_
            mulitiline: False
            pos_hint: {'center_x': 0.5}
            size_hint_x: 0.5
            width:100
            line_height: 1
        
        Button:
            text: "Zaloguj się"
            on_press: root.manager.current = 'mygrid'
