<AFinishRefWidget>
    name: 'a_finishrefwidget'
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    

    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wróć"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = root.parent.last_screen()

        

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        

        
        Label:
            text: "Pomiar referencyjny się zakończył"
            color: 0,0,0,1

        UButton:
            text: "Zapisz wyniki"
            on_press:
                
        
        UButton:
            text: "Rozpocznij pomiar badania"
            on_press:
                root.parent.add_screen('finishrefwidget')
                root.manager.current = 'observationexpwidget'
                root.manager.transition.direction = 'left'