<AObservationRefWidget>
    name: 'a_observationrefwidget'
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    

    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wróć"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = root.parent.last_screen()

        

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        

        
        Label:
            text: "Wykonuj ćwiczenie\nktóre zostało pokazane wcześniej"
            color: 0,0,0,1

        Label:
            text: "Zakończ ćwiczenie"
            color: 0,0,0,1
        
        UButton:
            text: "Przejdz do nastepnego ćwiczenia"
            on_press:
                root.parent.add_screen('observationrefwidget')
                root.manager.current = 'finishrefwidget'
                root.manager.transition.direction = 'left'