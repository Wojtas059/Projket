<HomeWidget>
    name: 'homewidget'
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        

        Button:
            text: "Zaloguj się"
            on_press:
                root.parent.add_screen('homewidget')
                root.manager.current = 'singinwidget'
                root.manager.transition.direction = 'left'

        Button:
            text: "Rozpocznij tryb Auto"
            on_press:
                root.parent.add_screen('homewidget')

        Button:
            text: "Pomoc"
            on_press:
                root.parent.add_screen('homewidget')
                root.manager.current = 'helpwidget'
                root.manager.transition.direction = 'left'
        
        Button:
            text: "Pogląd trybu zaawansowanego"
            on_press:
                root.parent.add_screen('homewidget')
                root.manager.current = 'userprowidget'
                root.manager.transition.direction = 'left'


<Button>
    size_hint: (0.5, 0.5)
    width: 200
    height: 50
    pos_hint: {'center_x': 0.5}
