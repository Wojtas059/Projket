<ManagmentSensorsWidget>
    name: 'managmentsensorsidget'
    sensor_1: sensor_1
    sensor_2: sensor_2
    on_pre_enter: root.on_load()
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    

    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wróć"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = root.parent.last_screen()

        

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 200
        

        BoxLayout:
            id: sensor_1
            disabled: True
            orientation: "horizontal"
            TextInput:
                hint_text: "Wprowadź address do taśmy 1"
                mulitiline: False
                size_hint: (0.7, 0.5)
                width: 100
                line_height: 1
            
            HButton:
                text: "Połącz"
                size_hint: (0.5, 0.5)
                on_press:
                    #root.parent.add_screen('chooselotsmuscleswidget')
                    #root.manager.current = ''
                    #root.manager.transition.direction = 'left'
        BoxLayout:
            id: sensor_2
            disabled: True
            orientation: "horizontal"
            TextInput:
                hint_text: "Wprowadź address do taśmy 2"
                mulitiline: False
                size_hint: (0.7, 0.5)
                width: 100
                line_height: 1
            
            HButton:
                text: "Połącz"
                size_hint: (0.5, 0.5)
                on_press:
                    #root.parent.add_screen('chooselotsmuscleswidget')
                    #root.manager.current = ''
                    #root.manager.transition.direction = 'left'
        
        HButton:
            text: "Dalej"
            on_press:
                root.parent.add_screen('managmentsensorsidget')
                root.manager.current = 'startreferencewidget'
                root.manager.transition.direction = 'left'
