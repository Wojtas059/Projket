<ReferenceInstWidget>
    name: 'referenceinstwidget'
    on_pre_enter: root.on_load()
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    

    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wróć"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = root.parent.last_screen()

        

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        

        VideoPlayer:
            source: "play.mkv"
            state: 'stop'
            loaded: 'True'

        

        
        UButton:
            text: "Rozpocznij ćwiczenie"
            on_press:
                root.parent.add_screen('referenceinstwidget')
                root.manager.current = 'observationrefwidget'
                root.manager.transition.direction = 'left'