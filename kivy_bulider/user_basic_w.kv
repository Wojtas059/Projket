<UserWidget>
    name: 'userwidget'
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wyloguj siÄ™"
            on_press:
                root.parent.clear_screen()
                root.manager.current = 'homewidget'
                root.manager.transition.direction = 'right'
        

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        

        HButton:
            text: "Historia "
            on_press: 
                #root.manager.current = ''
                root.manager.current = root.parent.add_screen("userwidget")
        HButton:
            text: "Rozpocznij tryb Auto"

        HButton:
            text: "Pomoc"
            on_press:
                root.manager.current = root.parent.add_screen("userwidget") 
                root.manager.current = 'helpwidget'


