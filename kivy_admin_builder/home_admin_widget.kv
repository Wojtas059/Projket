<HomeAdminWidget>
    name: 'home_admin_widget'
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        

        HButton:
            text: "Zresetuj bazÄ™ danych"
            on_press:
                root.resetDatabase()

               



<HButton@Button>
    size_hint: (0.5, 0.3)
    width: 200
    height: 50
    pos_hint: {'center_x': 0.5}

<HLabel@Label>
    size_hint: 1, None
    width: 100
    height: 20
    pos_hint: {'center_x': 0.5}