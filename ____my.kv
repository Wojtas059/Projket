<MyGrid>
    name: name
    pizza: pizza
    color: color

    GridLayout:
        #cols:1
        #rows: 3
        size: root.width, root.height
        


        GridLayout:
            cols:2
            
            Label:
                text: "Name"
            TextInput:
                id: name
                mulitiline: False
            
            Label:
                text: "Favorite Pizza"
            TextInput:
                id: pizza
                mulitiline: False

            Label:
                text: "Favorite Color"
                
            TextInput:
                id: color
                mulitiline: False

        Button:
            text: "Submit"   
            font_size:  16
            on_press: root.press()