<UsersSeeWidget>
    name: 'usersseewidget'
    du:du
    id: see_
    on_pre_enter: root.on_load()
    #on_load: root.get_data()
    email_add_user: email_add_user
    canvas.before:
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    
    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wróć"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = root.parent.last_screen()
    
    GridLayout:
        size: root.width, root.height
        cols: 1    
        GridLayout:
            cols: 3
            size_hint: (0.1, 0.06)
            Label:
                color: 0,0,0,1
                text: "Email"
            TextInput:
                id: email_add_user
                hint_text: "Podaj email użytkownika"
            Button:
                text: "Dodaj"
                on_press:
                    if root.on_press():\
                    email_add_user.text = ""
            

        UserListButton:
            id: du

<BattonLabel>:
    nazwa: nazwa
    label_text: label_text
    cols: 3
    padding: 20
    id: nazwa
    text: ''
    hint_text: ''
    # Draw a background to indicate selection
    Label:
        color: 0,0,0,1
        id: label_text
        text: nazwa.text
    Button:
        text: 'Zobacz profil'
        on_press:
            root.see_user_pop(nazwa.text,nazwa.hint_text)

    Button:
        text: "Historię pomiarową "
    

    


    
<UserListButton>
    name: "recycleV"
    viewclass: 'BattonLabel'
    color: 0,0,0,1
    data: root.parent.parent.get_data()
    RecycleBoxLayout:
        orientation: 'vertical'
        default_size: root.width, None
        size_hint_y: None
        height: self.minimum_height
        width: self.minimum_width
        multiselect: True
        touch_multiselect: True

        
