<AChooseUserWidget>
    name: 'a_chooseuserwidget'
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    

    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wróć"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = root.parent.last_screen()

        

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        

        UButton:
            text: "Wybierz użytkownika"

        UButton:
            text: "Nowy użytkownik"
        
        UButton:
            text: "Dalej"




<UButton@Button>
    size_hint: (0.4, 0.1)
    width: 200
    height: 50
    pos_hint: {'center_x': 0.5}