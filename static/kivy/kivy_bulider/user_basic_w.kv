<UserWidget>
    name: 'userwidget'
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wyloguj się"
            on_press:
                root.parent.clear_screen()
                root.manager.current = 'homewidget'
                root.manager.transition.direction = 'right'
        

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        

        HButton:
            text: "Wyświetl profil"
            on_press:
                root.parent.set_see_account(root.parent.get_email)
                root.parent.add_screen("userwidget") 
                root.manager.current = 'useraccountwidget'
                root.manager.transition.direction = 'left'
                #root.manager.current = ''
                #root.manager.current = root.parent.add_screen("userwidget")
        HButton:
            text: "Rozpocznij tryb Auto"
            on_press:
                root.parent.add_screen("userwidget") 
                root.manager.current = 'choosemethodwidget'
                root.manager.transition.direction = 'left'

        HButton:
            text: "Pomoc"
            on_press:
                root.parent.add_screen("userwidget") 
                root.manager.current = 'helpwidget'
                root.manager.transition.direction = 'left'


