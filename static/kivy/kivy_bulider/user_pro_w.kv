<UserProWidget>
    name: 'userprowidget'
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wyloguj się"
            on_press:
                root.parent.clear_screen()
                root.manager.current = 'homewidget'
                root.manager.transition.direction = 'right'
            
        

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        

        HButton:
            text: "Twoi Użytkownicy"
            on_press:
                #root.parent.auto_refresh()
                root.parent.add_screen("userprowidget") 
                root.manager.current = 'usersseewidget'
                root.manager.transition.direction = 'left'

        HButton:
            text: "Rozpocznij tryb Manual"
            on_press:
                root.parent.add_screen("userprowidget") 
                root.manager.current = 'a_choosemethodwidget'
                root.manager.transition.direction = 'left'

        HButton:
            text: "Pomoc"
            on_press: 
                root.parent.add_screen("userprowidget") 
                root.manager.current = 'helpwidget'
                root.manager.transition.direction = 'left'



