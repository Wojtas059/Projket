<ObservationRefWidget>
    name: 'observationrefwidget'
    #on_pre_enter: root.on_load()
    timeer_: timeer_
    start: start
    next: next
    canvas.before: 
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    

    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wróć"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = root.parent.last_screen()

        

    BoxLayout_:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 100
        

        
        Label:
            text: "Wykonuj ćwiczenie\nktóre zostało pokazane wcześniej"
            color: 0,0,0,1

        IncrediblyCrudeClock:
            id: timeer_
            color: 0,0,0,1
            font_size: 100



        HButton:
            id: start
            text: "Start"
            on_press:
                root.on_load()
        
        HButton:
            id: next
            text: "Przejdz do nastepnego ćwiczenia"
            disabled: True
            on_press:
                root.manager.current =root.parent.how_meny('')
                #root.manager.transition.direction = 'left'
                #root.parent.add_screen('observationrefwidget')

<BoxLayout_>

<IncrediblyCrudeClock>
    text: str(round(self.a, 1))