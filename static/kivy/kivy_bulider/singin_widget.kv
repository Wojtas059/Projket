<SingInWidget>
    name: 'singinwidget'
    login: login
    password: password
    canvas.before:
        Color:
            rgba: (240/255,240/255,240/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
            
    FloatLayout:
        size: root.width, root.height
        spacing: 20
        padding: 100

        Button:
            size_hint: (0.1, 0.1)
            pos_hint: {'x': 0, 'top': 1}
            text: "Wróć"
            on_press: 
                root.manager.current = root.parent.last_screen()
                root.manager.transition.direction = 'right'
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        spacing: 20
        padding: 150

        HLabel:
            text: "Login"
            width: 10
            size_hint: (0.5, 0.5)
            color: 0,0,0,1
        TextInput:
            id: login
            mulitiline: False
            pos_hint: {'center_x': 0.5}
            size_hint: (0.5, 0.5)
            width: 100
            line_height: 1

        HLabel:
            text: "Hasło"
            width: 10
            size_hint: (0.5, 0.5)
            color: 0,0,0,1
        TextInput:
            id: password
            password: True
            mulitiline: False
            pos_hint: {'center_x': 0.5}
            size_hint: (0.5, 0.5)
            width:100
            line_height: 1
        
        HButton:
            text: "Zaloguj się"
            on_press: 
                if root.on_press():\
                login.text = "";\
                password.text = "";\
                root.parent.clear_screen();\
                root.parent.set_home_widget(root.user_advance());\
                root.manager.current = root.user_advance()
        
        HButton:
            text: " Zarejestruj się"
            on_press:
                root.parent.add_screen('singinwidget')
                root.manager.current = 'singupwidget'
